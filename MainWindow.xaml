<Window x:Class="NotepadDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" MinWidth="800" MinHeight="500" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="#1e2124" Grid.Row="0">
            <TextBlock FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="#ffca4f">NOTATNIK</TextBlock>
        </Grid>
        <Grid Background="#36393e" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="200" MaxWidth="500" />
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

            <ListView Background="#424549" Foreground="White" FontSize="24">
                <ListBoxItem>Lista zakupów</ListBoxItem>
                <ListBoxItem>Zadania domowe</ListBoxItem>
            </ListView>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="20">
                    <TextBlock FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="White">Lista zakupów</TextBlock>
                </Grid>
                <Grid Grid.Row="1" Margin="20">
                    <TextBlock FontSize="18" Foreground="White">Pierogi</TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
    
</Window>
